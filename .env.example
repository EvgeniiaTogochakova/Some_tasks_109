# Application Settings
APP_NAME=Laravel
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=http://localhost
APP_TIMEZONE=UTC

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=laravel
DB_USERNAME=user
DB_PASSWORD=password

# Logging Configuration
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Service Configuration
BROADCAST_DRIVER=log
QUEUE_CONNECTION=database
CACHE_DRIVER=database
SESSION_DRIVER=database

# File System
FILESYSTEM_DISK=local

# Cache and Session Settings
CACHE_STORE=database
CACHE_PREFIX=laravel_cache_
SESSION_LIFETIME=120
SESSION_SECURE_COOKIE=false
SESSION_DOMAIN=localhost
SESSION_COOKIE=laravel_session

# Security Settings
SANCTUM_STATEFUL_DOMAINS=localhost
SANCTUM_EXPIRATION=3600
SANCTUM_TOKEN_PREFIX=laravel_sanctum_

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost
CORS_ALLOWED_METHODS=GET,POST,PUT,PATCH,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=X-Requested-With,Content-Type,X-Token-Auth,Authorization

# Vite Configuration
VITE_URL=http://localhost:5173
VITE_APP_NAME="${APP_NAME}"

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# PHP OPcache Settings
OPCACHE_ENABLE=1
OPCACHE_MEMORY_CONSUMPTION=128
OPCACHE_INTERNED_STRINGS_BUFFER=16
OPCACHE_MAX_ACCELERATED_FILES=10000
OPCACHE_REVALIDATE_FREQ=0
OPCACHE_VALIDATE_TIMESTAMPS=0

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_MINUTES=1

# Cookie Settings
COOKIE_SECURE=false
COOKIE_HTTP_ONLY=true
COOKIE_SAME_SITE=lax
COOKIE_DOMAIN=localhost

# Trusted Proxies
TRUSTED_PROXIES=*

# PHP Memory Settings
MEMORY_LIMIT=256M
MAX_EXECUTION_TIME=60

# Additional Notes:
# - Set APP_ENV to 'local' for development
# - Set APP_DEBUG to 'true' for development
# - Generate APP_KEY using 'php artisan key:generate'
# - Adjust SANCTUM_STATEFUL_DOMAINS for your domains
# - Configure proper mail settings for production
# - Adjust rate limiting based on your needs
# - Set proper SESSION_DOMAIN and COOKIE_DOMAIN
# - Adjust memory limits based on server capacity
